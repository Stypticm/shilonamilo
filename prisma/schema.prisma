generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categories {
  id   String @id @default(uuid())
  name String @db.VarChar(255)
}

model Favorite {
  id        String    @id @default(uuid())
  userid    String?   @db.VarChar(255)
  thingid   String?   @db.VarChar(255)
  createdat DateTime? @default(now()) @db.Timestamp(6)
  Thing     Thing?    @relation(fields: [thingid], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User      User?     @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Thing {
  id               String     @id @default(uuid())
  name             String?    @db.VarChar(255)
  description      String?
  country          String?    @db.VarChar(255)
  city             String?    @db.VarChar(255)
  category         String?    @db.VarChar(255)
  youneed          String?
  createdat        DateTime?  @default(now()) @db.Timestamp(6)
  userid           String?    @db.VarChar(255)
  photothing       String?    @db.VarChar(512)
  photoyouneed     String?    @db.VarChar(512)
  addedcategory    Boolean?
  addeddescription Boolean?
  addedlocation    Boolean?
  addedyouneed     Boolean?
  Favorite         Favorite[]
  User             User?      @relation(fields: [userid], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model User {
  id        String     @id @unique
  email     String     @db.VarChar(255)
  firstname String     @db.VarChar(255)
  photourl  String?    @db.VarChar(255)
  createdat DateTime?  @default(now()) @db.Timestamp(6)
  Favorite  Favorite[]
  Thing     Thing[]
}
